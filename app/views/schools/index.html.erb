<p id="notice"><%= notice %></p>

<h1>Schools</h1>

<table>
  <thead>
    <tr>
      <th>School icon name</th>
      <th>School name</th>
      <th>School email</th>
      <th>School website</th>
      <th>School description</th>
      <th>Color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.school_icon_name %></td>
        <td><%= school.school_name %></td>
        <td><%= school.school_email %></td>
        <td><%= school.school_website %></td>
        <td><%= school.school_description %></td>
        <td><%= school.color %></td>
        <td><%= link_to 'Show', school %></td>
        <td><%= link_to 'Edit', edit_school_path(school) %></td>
        <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

