	<title>Operation Dinner Out</title>
	<meta name="description" content="Capstone 2017 project">

	<!-- 2. Bootstrap CSS: From CDN www.bootstrapcdn.com -->
	<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

	<!-- 3. Favicon + my CSS: these are optional -->
	<link rel="icon" href="favicon.ico">
	<!--<link href="style.css" rel="stylesheet">-->
	<link href="../css/general.css" rel="stylesheet">
  <link href="../css/school.css" rel="stylesheet">
	<script src="https://use.fontawesome.com/6ac119a099.js"></script>	<!-- 4. Old Explorer support: HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
	<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
	<!--[if lt IE 9]>
		<script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
		<script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
	<![endif]-->
</head>


<body>
<div class="container">
	<div class="row">
		<div class="col-xs-10 col-xs-offset-1 col-sm-12 col-sm-offset-0 content-col">

			<!-- page header -->
			<div class="page-header cap17-header">
				<h2>All Schools <small> - view/edit all schools
					<div class ="header-sq i-navy pull-right" title="All schools">
						<span class="fa fa-home fa-2x header-icon"></span>
					</div>
				</small>
				</h2>
			</div>   <!--page header-->

			<!-- new school button -->
			<div class="row">
				<div class="col-xs-3 col-xs-offset-1">
					<form  action="school3.html">
						<button type="submit" class="col-sm-offset-1 btn btn-lg btn-success">
							<i class="fa fa-plus-square-o"></i> New School
						</button>
					</form>
				</div>   <!-- col -->
    	</div>   <!-- row -->

			<!-- all school table -->
	    <table class="table table-striped table-hover table-responsive schools-table">
	   		<thead>
	   			<tr>
						<th>ID</th>
						<th>Name</th>
						<th>Description</th>
					</tr>
				</thead>
				<tbody>
				  <tr data-link="">
		        <%= will_paginate %>
		          <ul class="schools">
		            <% @schools.each do |school| %>
		            		<td><p class="listText">
								    <span class="fa fa-home school-icon">&nbsp;&nbsp;&nbsp; <%= school.school_icon_name %> </p></td>
								    <td><p class="listText"> <%= school.school_name %> </p></td>
								    <td><p class="listText"> <%= school.school_description %> </p></td>
		  		      <% end %>
		          </ul>
		        <%= will_paginate %>
			 		</tr>
				</tbody>
				
			</table>

		</div>   <!-- col --> 
	</div>   <!-- row -->
</div>   <!-- container -->


<!-- 5. Jquery: jQuery (necessary for Bootstrap's JavaScript plugins) -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>

<!-- 6. Bootstrap Javascript: Include all compiled plugins (below), or include individual files as needed -->
<!-- Got this from CDN: https://www.bootstrapcdn.com/ -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

	<script>
		/*
		This Javascript function enables hyperlink selection of an entire row
		My source for this is my class last term, CSC 495:
		https://github.com/noctrl-csc495-spring2016/Odyssey495/blob/master/app/views/layouts/_footer.html.erb
		*/
		$("tr[data-link]").click(function() {
		  window.location = this.dataset.link
		})
	</script>
</body>
</html>