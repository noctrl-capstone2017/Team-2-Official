<!--Adapted for use by Kevin M. -->
<!-- page header -->
<div class="page-header vertical-align">
	<p id="notice"><%= notice %></p>
	<div class="col-xs-11">
		<h2>All Teachers<small> - manage teachers at TPTE</small></h2><!-- Dynamically fills in with school id -->
	</div>
	<div class="col-xs-1 center-block">
		<div class="header-sq i-plum" title="Bianca17">
			<span class="fa fa-apple fa-3x teacher-icon"></span>
		</div>
	</div>
</div><!--End page header-->

	<!--New Teacher Button-->
<div class="row first-content-row">
	<div class="col-xs-3">
		<%= button_to "New Teacher", new_teacher_path,
    :class => "col-sm-offset-1 btn btn-lg btn-success", :method => :get %>
	</div><!--End col-->
</div><!--End row -->

 <!--Teacher display area -->
<table class="table table-striped table-hover table-responsive teachers-table">
	<thead>
		<tr>
			<th class="col-xs-1">Icon</th>
			<th>ID</th>
			<th>Name</th>
			<th>Admin</th>
			<th>Last Login</th>
		</tr>
	</thead>
	<tbody>
		<% @teachers.each do |teacher| %>
		<tr data-link=<%= edit_teacher_path(teacher.id) %>>
			<td>
				<div class="table-sq i-plum" title="<%= teacher.user_name %>">
					<span class="fa fa-apple fa-2x table-icon"></span>
				</div>
			</td>
			<td><p class="listText"><%= teacher.user_name %></p></td>
			<td><p class="listText"><span><%= teacher.teacher_name %></span></p></td>
			<td><p class="listText"><span><%= teacher.admin_powers %></span></p></td>
			<!--This will hold the teacher's last logged in date.-->
			<td><p class="listText"><span></span></p>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>
