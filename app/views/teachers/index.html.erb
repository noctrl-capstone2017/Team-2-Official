<p id="notice"><%= notice %></p>

<h1>Teachers</h1>

<table>
  <thead>
    <tr>
      <th>User name</th>
      <th>Teacher icon name</th>
      <th>Teacher name</th>
      <th>Teacher email</th>
      <th>Admin powers</th>
      <th>Analysis powers</th>
      <th>Teacher description</th>
      <th>Color</th>
      <th>School</th>
      <th>Teacher password</th>
      <th>Teacher password confirmation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.user_name %></td>
        <td><%= teacher.teacher_icon_name %></td>
        <td><%= teacher.teacher_name %></td>
        <td><%= teacher.teacher_email %></td>
        <td><%= teacher.admin_powers %></td>
        <td><%= teacher.analysis_powers %></td>
        <td><%= teacher.teacher_description %></td>
        <td><%= teacher.color %></td>
        <td><%= teacher.school_id %></td>
        <td><%= teacher.teacher_password %></td>
        <td><%= teacher.teacher_password_confirmation %></td>
        <td><%= link_to 'Show', teacher %></td>
        <td><%= link_to 'Edit', edit_teacher_path(teacher) %></td>
        <td><%= link_to 'Destroy', teacher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

