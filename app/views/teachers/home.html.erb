				</div>   <!-- row -->
				<div class="row students-row">
					<div class="col-xs-3 text-center">
						<div class ="square i-pink center-block">
							<span class="fa fa-gamepad fa-5x student-icon"></span>
						</div>
						<p><span class="student-icon-text">EugeneB</span></p>
					</div>   <!-- col -->
					<div class="col-xs-3 text-center">
						<div class =" square i-lavendar center-block">
							<span class="fa fa-paper-plane fa-5x student-icon "></span>
						</div>
						<p><span class="student-icon-text">LexiP</span></p>
					</div>	<!-- col -->
					<div class="col-xs-3 text-center">
						<div class ="square i-dkorange center-block">
							<span class="fa fa-flash fa-5x student-icon"></span>
						</div>
						<p><span class="student-icon-text">JohnnyV</span></p>
					</div>   <!-- col -->
					<div class="col-xs-3 text-center">
						<div class ="square i-green center-block">
							<span class="fa fa-car fa-5x student-icon"></span>
