	<!--Author: Alexander Pavia -->
	<!--HTML provided by capstone17-->
	<div class="page-header vertical-align">
	 <div class="col-xs-11">
	    <!-- Fill in teachers username 
	       I put the first teachers name
	       for now -->
	    <h2> 
	       <%= Teacher.first.teacher_name %>
	    </h2>
	    <!-- Dynamically fills in with school id -->
	 </div>
	 <div class="col-xs-1 pull-right">
	    <div class="header-sq i-plum" >
	       <span class="fa fa-apple fa-3x teacher-icon"></span>
	    </div>
	 </div>
	</div>
	<!--End page header-->
	<!--Student Roster Area -->
	<div id="student-roster">
	<!--Student display area: shows the last 8 students teacher worked with -->
	<% Student.first(8).each do |student| %>
	<div class="col-xs-3 text-center">
           <div class =" square i-<%= student.color %> center-block">
               <span class="fa fa-<%= student.student_icon %> fa-5x student-icon "></span>
           </div>
           <p><span class="student-icon-text"><%= student.student_name %></span></p>
       </div>    <!-- col -->
   <%end%>
   	<!--End Student Roster -->
	<!-- Search Form should populate with student name on selection -->
	<!-- All students who are assigned to teacher will populate here -->
	<!-- horizontal form help from:	www.w3schools.com/bootstrap/bootstrap_forms.asp -->
	<div class="row">
	 <form class="form-horizontal text-center action-buttons-row">
	    <div class="col-sm-offset-3">
	       <div class="form-group">
	          <label class="control-label col-sm-2" for="email">Student:</label>
	          <div class="col-sm-4">
	             <!--Select Dropdown menu with Student names -->
	             <%= collection_select(:student, :student_id,Student.all, :id, :student_name) %>
	          </div>
	       </div>
	    </div>
	 <div class="form-group"> 
			<div class="col-xs-3 text-center col-xs-offset-3">
				<%= button_tag(type: 'submit', class: "btn btn-lg btn-primary", name: 'start_session') do %>
					<i class="fa fa-clock-o"></i>  Start Session
				<% end %>
			</div>
			<div class="col-xs-3 text-center">
				<%= button_tag(type: 'submit', class: "btn btn-lg btn-success", name: 'analyze') do %>
					<i class="fa fa-line-chart"></i> Analyze Sessions
				<% end %>
			</div>
		</div>
	</form>
</div>   <!-- row -->


