<p id="notice"><%= notice %></p>

<h1>Roster Students</h1>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Teacher</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roster_students.each do |roster_student| %>
      <tr>
        <td><%= roster_student.student_id %></td>
        <td><%= roster_student.teacher_id %></td>
        <td><%= link_to 'Show', roster_student %></td>
        <td><%= link_to 'Edit', edit_roster_student_path(roster_student) %></td>
        <td><%= link_to 'Destroy', roster_student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

